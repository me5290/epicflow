<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<Pane fx:id="mainPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.epicflow.controller.VillageController">
   <children>
      <Pane fx:id="bg" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0">
         <children>
            <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../img/village_test.jpg" />
               </image>
            </ImageView>
            <Button fx:id="field" layoutX="88.0" layoutY="289.0" mnemonicParsing="false" onMouseClicked="#field" text="사냥" textFill="#d73939" />
            <Button fx:id="store" layoutX="350.0" layoutY="190.0" mnemonicParsing="false" onAction="#store" text="상점">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="motelBtn" alignment="CENTER" layoutX="637.0" layoutY="123.0" mnemonicParsing="false" onAction="#motelBtnOn" prefHeight="25.0" prefWidth="50.0" text="여관" textFill="#2c6e9a">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <Pane fx:id="motelPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #938E8E;" visible="false">
         <children>
            <ImageView fx:id="motelBg" fitHeight="492.0" fitWidth="800.0" pickOnBounds="true">
               <image>
                  <Image url="@../../../../img/gameMotel.jpg" />
               </image>
            </ImageView>
            <Label fx:id="motelLabel1" layoutX="16.0" layoutY="492.0" prefHeight="41.0" prefWidth="769.0" text="여관에 오신걸 환영 합니다.">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="motelLabel2" layoutX="16.0" layoutY="518.0" prefHeight="41.0" prefWidth="769.0" text="여관 이용료는 하루에 10골드 입니다. 이용 하시겠습니까?">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="useMtBtn" layoutX="401.0" layoutY="559.0" mnemonicParsing="false" onAction="#useMtBtnOn" prefHeight="25.0" prefWidth="70.0" text="숙박한다" />
            <Button fx:id="outMtBtn" layoutX="621.0" layoutY="559.0" mnemonicParsing="false" onAction="#outMtBtnOn" prefHeight="25.0" prefWidth="70.0" text="나간다" />
         </children>
      </Pane>
   </children>
</Pane>
